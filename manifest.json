{
  "manifest_version": 3,
  "name": "Smart Shortcut Panel",
  "version": "1.0",
  "description": "Quick Site Shortcuts gives you instant access to your most used pages in websites. Create domain-specific shortcuts and navigate with keyboard commands.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",  
    "commands", 
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options/options.html",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Quick Site Shortcuts",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "open-custom-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Open Settings"
    },
    "shortcut-01": {
      "description": "Keyboard Shortcut 1"
    },
    "shortcut-02": {
      "description": "Keyboard Shortcut 2"
    },
    "shortcut-03": {
      "description": "Keyboard Shortcut 3"
    },
    "shortcut-04": {
      "description": "Keyboard Shortcut 4"
    },
    "shortcut-05": {
      "description": "Keyboard Shortcut 5"
    },
    "shortcut-06": {
      "description": "Keyboard Shortcut 6"
    },
    "shortcut-07": {
      "description": "Keyboard Shortcut 7"
    },
    "shortcut-08": {
      "description": "Keyboard Shortcut 8"
    },
    "shortcut-09": {
      "description": "Keyboard Shortcut 9"
    },
    "shortcut-10": {
      "description": "Keyboard Shortcut 10"
    }
  }
}